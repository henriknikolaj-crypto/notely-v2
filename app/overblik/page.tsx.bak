// app/overblik/page.tsx
import "server-only";
import Link from "next/link";
import { supabaseServerRSC } from "@/lib/supabase/server-rsc";

type FolderRow = {
  id: string;
  name: string;
};

async function getOwnerId(sb: any): Promise<string | null> {
  try {
    if (sb?.auth?.getUser) {
      const { data } = await sb.auth.getUser();
      if (data?.user?.id) return data.user.id as string;
    }
  } catch {
    // ignore i lokal dev
  }
  return process.env.DEV_USER_ID ?? null;
}

export const dynamic = "force-dynamic";

export default async function OverblikPage() {
  const sb = await supabaseServerRSC();
  const ownerId = await getOwnerId(sb);

  if (!ownerId) {
    return (
      <main className="bg-[#fffef9] min-h-screen">
        <header className="border-b border-zinc-200 bg-white">
          <div className="mx-auto flex max-w-6xl items-center justify-between px-4 py-4 md:px-6">
            <Link href="/" className="text-lg font-semibold">
              Notely <sup className="text-xs align-super">β</sup>
            </Link>
            <Link
              href="/auth/login"
              className="rounded-lg border border-zinc-300 px-3 py-1 text-xs hover:bg-zinc-50"
            >
              Log ind
            </Link>
          </div>
        </header>
        <div className="mx-auto max-w-6xl p-6">
          <h1 className="mb-2 text-2xl font-semibold">Overblik</h1>
          <p className="text-sm text-red-600">
            Mangler bruger-id (hverken login eller DEV_USER_ID sat).
          </p>
        </div>
      </main>
    );
  }

  const { data: foldersData, error: foldersError } = await sb
    .from("folders")
    .select("id,name")
    .eq("owner_id", ownerId)
    .order("name", { ascending: true });

  if (foldersError) {
    console.error("OVERBLIK folders error:", foldersError);
  }

  const folders = (foldersData ?? []) as FolderRow[];

  const { count: notesCount = 0 } = await sb
    .from("notes")
    .select("id", { count: "exact", head: true })
    .eq("owner_id", ownerId);

  const { count: evalCount = 0 } = await sb
    .from("exam_sessions")
    .select("id", { count: "exact", head: true })
    .eq("owner_id", ownerId);

  return (
    <main className="bg-[#fffef9] min-h-screen">
      {/* Topbar */}
      <header className="border-b border-zinc-200 bg-white">
        <div className="mx-auto flex max-w-6xl items-center justify-between px-4 py-4 md:px-6">
          <Link href="/overblik" className="text-lg font-semibold">
            Notely <sup className="text-xs align-super">β</sup>
          </Link>
          <div className="flex items-center gap-3">
            <span className="text-xs text-zinc-700">
              henriknikolaj@gmail.com
            </span>
            <Link
              href="/auth/logout"
              className="rounded-lg border border-zinc-300 px-3 py-1 text-xs hover:bg-zinc-50"
            >
              Log ud
            </Link>
          </div>
        </div>
      </header>

      {/* Layout */}
      <div className="mx-auto flex max-w-6xl gap-6 px-4 py-6 md:px-6">
        {/* Venstre kolonne */}
        <aside className="w-64 shrink-0">
          <div className="space-y-3 rounded-2xl border border-zinc-200 bg-white p-3 text-sm shadow-sm">
            <div className="px-2 pt-1 pb-1 font-semibold text-zinc-800">
              Overblik
            </div>
            <nav className="px-2 space-y-1 text-xs">
              <div className="block rounded-lg bg-zinc-900 px-3 py-2 text-white">
                Overblik (aktuel)
              </div>
              <Link
                href="/traener/noter"
                className="block rounded-lg px-3 py-2 hover:bg-zinc-50"
              >
                Noter / træning
              </Link>
              <Link
                href="/traener/upload"
                className="block rounded-lg px-3 py-2 hover:bg-zinc-50"
              >
                Upload materiale
              </Link>
              <Link
                href="/konto"
                className="block rounded-lg px-3 py-2 hover:bg-zinc-50"
              >
                Konto
              </Link>
            </nav>

            <div className="px-2 pt-2 font-semibold text-zinc-800">
              Mapper
            </div>
            <div className="px-2 space-y-1 text-xs">
              {folders.length ? (
                folders.map((f) => (
                  <div key={f.id} className="truncate text-zinc-700">
                    • {f.name}
                  </div>
                ))
              ) : (
                <div className="text-zinc-500">
                  Ingen mapper endnu. Opret dem via Noter / træning eller Upload.
                </div>
              )}
            </div>

            <div className="px-2 pt-2 text-[10px] text-zinc-500">
              {notesCount} noter • {evalCount} evalueringer
            </div>
          </div>
        </aside>

        {/* Højre kolonne: fag-kort */}
        <section className="min-w-0 flex-1 space-y-4">
          <h1 className="mb-1 text-xl font-semibold">Overblik</h1>
          <p className="mb-4 text-xs text-zinc-600">
            Dine fag samlet ét sted – klik på et kort for at gå direkte til
            Noter / træning i den valgte mappe.
          </p>

          {folders.length ? (
            folders.map((f) => (
              <div
                key={f.id}
                className="rounded-2xl border border-zinc-200 bg-white p-4 shadow-sm"
              >
                <div className="flex items-baseline justify-between gap-3">
                  <div>
                    <div className="text-sm font-semibold text-zinc-900">
                      {f.name}
                    </div>
                    <div className="mt-1 text-[10px] text-zinc-500">
                      (Her kan vi senere vise niveau, sidste aktivitet osv.)
                    </div>
                  </div>
                  <Link
                    href={`/traener/noter?folder_id=${encodeURIComponent(f.id)}`}
                    className="text-[10px] text-zinc-700 hover:underline"
                  >
                    Klik for at træne →
                  </Link>
                </div>
              </div>
            ))
          ) : (
            <div className="rounded-2xl border border-dashed border-zinc-300 bg-white p-6 text-sm text-zinc-500">
              Ingen mapper endnu. Gå til{" "}
              <Link
                href="/traener/noter"
                className="font-medium text-zinc-900 underline"
              >
                Noter / træning
              </Link>{" "}
              for at oprette dine første mapper.
            </div>
          )}
        </section>
      </div>
    </main>
  );
}
